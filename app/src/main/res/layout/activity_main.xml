<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/sage"
    >


    <!-- edits -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/regulationsButton"
            style="@style/DisplayStyle"
            android:layout_width="189dp"
            android:layout_height="58dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Regulations" />//>

        <Button
            android:id="@+id/medicalButton"
            style="@style/DisplayStyle"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/regulationsButton"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Medical"/>

        <TextView
            android:id="@+id/display"
            android:layout_width="400dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="100dp"
            android:background="#2F3C7E"
            android:gravity="center"
            android:padding="8dp"
            android:text="IMSAFE Checklist"
            android:textSize="30sp" />

    </RelativeLayout>
</RelativeLayout>

