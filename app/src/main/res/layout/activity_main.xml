<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3700BCD4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="30dp"
        android:text="Welcome, Pilot!"
        android:textSize="40dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="50dp"
        android:text="@string/imsafe_description"
        android:textStyle="bold"
        android:layout_below="@id/welcome_text"
        />

    <GridLayout
        android:id="@+id/selector_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_text"
        android:layout_centerHorizontal="true"
        android:columnCount="1"
        android:paddingHorizontal="50dp"
        android:paddingTop="20dp"
        >
        <TextView
            android:text="@string/select_an_option_below"
            />

        <Button
            android:id="@+id/start_checklist_button"
            android:text="@string/perform_imsafe_evaluation"
            style="@style/landing_button"/>

        <Button
            android:id="@+id/regulationsButton"
            style="@style/landing_button"
            android:text="@string/review_faa_rules_amp_regulations" />

        <Button
            android:id="@+id/display"
            style="@style/landing_button"
            android:text="@string/past_results" />

        <Button
            android:id="@+id/medicalButton"
            style="@style/landing_button"
            android:text="@string/aviation_medical_resources" />


    </GridLayout>


</RelativeLayout>