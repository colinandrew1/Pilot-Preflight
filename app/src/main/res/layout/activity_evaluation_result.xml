<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImsafeActivity">

    <TextView
        android:id="@+id/evaluation_results_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Evaluation Results"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        style="@style/TextAppearance.AppCompat.Headline"
        />
    <TextView
        android:id="@+id/detailed_results_text_area"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/evaluation_results_title_text_view"
        android:textSize="18sp"
        />
    <Button
        android:id="@+id/return_home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailed_results_text_area"
        android:layout_centerHorizontal="true"
        style="@style/landing_button"
        android:text="@string/return_home"
        />


</RelativeLayout>